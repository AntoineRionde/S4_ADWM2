{% extends "squelette.twig" %}

{% block title %}Articles{% endblock %}

{% block content %}

    <h1>Articles</h1>
    <ul>
        {% if articles|length > 0 %}
            {% for art in articles %}
                <li>
                    <h2>    {{art.titre}}</h2><p>paru le : {{art.date_creation}}</p>
                    {{ art.resume|raw }}
                    {{ art.contenu|raw }}
                    <p>    Auteur  :   {{art.auteur}}</p>
                </li>

            {% endfor %}
        {% else %}
            <li>Aucun article trouv√©.</li>
        {% endif %}
    </ul>
{% endblock %}
