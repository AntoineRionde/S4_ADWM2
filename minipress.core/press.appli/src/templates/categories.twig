{% extends "squelette.twig"%}

{% block title %}Categories{% endblock %}

{% block content %}
    <h1>Categories</h1>
<ul>
    {% for cat in categories %}
    <li>
        <h2><a href="{{ url_for('getCategoriesByIdAction', { 'id': cat.id }) }}">{{cat.titre}}</h2></a>
        <h3>{{cat.description}}</h3>
        {% endfor %}
</ul>
{% endblock %}
