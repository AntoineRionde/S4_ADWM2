<header class="flex-row">
    <a href="{{ url_for('home') }}" id="header-title" class="flex-row">
        <h1>MiniPress</h1>
        <img src="/img/newspaper.svg" alt="Logo MiniPress">
    </a>
    <nav id="header-nav">
        <a href="{{ url_for('home') }}">Accueil</a>
        {% if user %}
            <a href="{{ url_for('categories', {target: 'categories'}) }}">Categories</a>
            <a href="{{ url_for('articles', {target: 'articles'}) }}">Articles</a>
            <a href="{{ url_for('utilisateurs', {target: 'utilisateurs'}) }}">Utilisateurs</a>
            {% if user['role'] %}
                <a href="{{ url_for('createUser', {target: 'createUser'}) }}">Créer un utilisateur</a>
                <a href="{{ url_for('createCategorie', {target: 'createCategorie'}) }}">Créer une catégorie</a>
            {% endif %}
            <a href="{{ url_for('createArticle', {target: 'createArticle'}) }}">Créer un article</a>
            <a href="{{ url_for('logout') }}">Déconnexion</a>
        {% endif %}
        {% if not user %}
            <a href="{{ url_for('register') }}">Inscription</a>
            <a href="{{ url_for('login') }}">Connexion</a>
        {% endif %}
    </nav>
</header>