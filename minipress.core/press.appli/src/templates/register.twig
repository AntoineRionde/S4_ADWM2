{% extends "squelette.twig" %}

{% block content %}
<form action="{{ url_for('registerAction') }}" method="POST">
    <label for="username">Nom d'utilisateur (@email):</label>
    <input type="email" name="username" required id="username">

    <label for="password">Mot de passe :</label>
    <input type="password" name="password" required id="password">

    <label for="confirm_password">Confirmer le mot de passe :</label>
    <input type="password" name="confirm_password" required id="confirm_password">

    <input type="submit" value="S'inscrire">
</form>
{% endblock %}