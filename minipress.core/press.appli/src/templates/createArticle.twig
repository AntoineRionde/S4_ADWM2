{% extends "squelette.twig"%}

{% block title %}Création d'un article{% endblock %}

{% block content %}
    <form action="{{ url_for('createArticlePost') }}" method="post">

        <label for="titre">Titre</label>
        <input type="text" id="titre" value="{{ article.titre }}">

        <label for="auteur">Auteur</label>
        <input type="text" id="auteur" value="{{ article.auteur }}" >

        <label for="resume" id="resume">Résumé</label>
        <textarea id="resume" name="resume" rows="5" cols="33">{{ article.resume }}</textarea>

        <label for="contenu" id="contenu">Contenu</label>
        <textarea id="contenu" name="contenu" rows="5" cols="33">{{ article.contenu }}</textarea>

        <label for="url_image">Image</label>
        <input type="file" id="url_image" name="url_image" value="{{ article.image }}">

        <label for="idCateg">Id de la catégorie</label>
        <input type="number" id="idCateg" name="idCateg" value="{{ article.idCateg }}">

        <input type="submit" value="Envoyer">

    </form>

{% endblock %}
